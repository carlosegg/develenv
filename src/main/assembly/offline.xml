<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>offline</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>LICENSE</include>
                <include>CREDITS</include>
                <include>README</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
            <file>
                <source>${project.build.directory}/site/assemblies/${project.artifactId}-${project.version}-install.tar.gz</source>
                <outputDirectory>/</outputDirectory>
                <fileMode>0644</fileMode>
            </file>
            <file>
                <source>src/main/scripts/setEnv.sh</source>
                <outputDirectory>/</outputDirectory>
                <fileMode>0755</fileMode>
                <filtered>true</filtered>
            </file>
            <file>
                <source>src/main/scripts/install.sh</source>
                <outputDirectory>/</outputDirectory>
                <fileMode>0755</fileMode>
                <filtered>true</filtered>
            </file>
            <file>
                <source>src/main/scripts/uninstall.sh</source>
                <outputDirectory>/</outputDirectory>
                <fileMode>0755</fileMode>
                <filtered>true</filtered>
            </file>
            <file>
            <source>target/site/changes-report.html</source>
                 <outputDirectory>/</outputDirectory>
                  <destName>RELEASE-NOTES.html</destName>
                  <fileMode>0644</fileMode>
                  <filtered>false</filtered>
            </file>
        </files>
</assembly>
